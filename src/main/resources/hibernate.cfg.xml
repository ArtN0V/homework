<?xml version='1.0' encoding='utf-8'?>
<hibernate-configuration>
    <session-factory>
        <!-- JDBC connection settings -->
        <property name="connection.driver_class">org.postgresql.Driver</property>
        <property name="connection.url">jdbc:postgresql://db:5432/usersdb</property>
        <property name="connection.username">userEntity</property>
        <property name="connection.password">pass</property>


        <!-- Dialect -->
        <property name="dialect">org.hibernate.dialect.PostgreSQL10Dialect</property>

        <!-- Connection pool (built-in) -->
        <property name="connection.pool_size">5</property>

        <!-- Show SQL -->
        <property name="show_sql">true</property>
        <property name="format_sql">true</property>

        <!-- hbm2ddl -->
        <property name="hbm2ddl.auto">update</property>
        <!-- options: validate | update | create | create-drop | none. Use update for dev -->

        <!-- c3p0, etc. can be configured here if needed -->

        <!-- Mapping classes -->
        <mapping class="com.example.userservice.model.User"/>
    </session-factory>
</hibernate-configuration>
